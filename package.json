{
  "name": "apod-downloader",
  "version": "0.0.2",
  "description": "An app to download NASA APOD images in the highest resolution",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox --disable-setuid-sandbox",
    "dev": "electron . --dev --no-sandbox --disable-setuid-sandbox",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --linux"
  },
  "keywords": [
    "electron",
    "apod",
    "nasa",
    "downloader"
  ],
  "author": "Sebastian",
  "license": "MIT",
  "dependencies": {
    "cheerio": "1.0.0-rc.12",
    "fs-extra": "11.1.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "tailwindcss": "^4.1.17"
  },
  "build": {
    "appId": "com.apod.downloader",
    "productName": "APOD Downloader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist",
      "!*.md",
      "!.git",
      "!.gitignore"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
